@{
    ViewBag.Title = "开卡买单";
}
<div class="space-2"></div>
<div class="row">
    <div class="col-xs-12 page-col-xs col-sm-12">
        <div class="well well-sm no-margin-bottom">
            <div class="row">
                <div class="col-xs-12 col-sm-6">
                    <div class="input-group">
                        <input class="form-control search-query" name="txtSearchCard" id="txtSearchCard" type="text" placeholder="请刷卡或输入电话号码、姓名、卡号" value="">
                        <span class="input-group-btn">
                            <button class="btn btn-purple btn-sm" type="submit">
                                会员刷卡 <i class="fa fa-search icon-on-right bigger-110"></i>
                            </button>
                            <a class="btn btn-primary btn-sm" href="#" data-toggle="modal" data-target="#member-list" data-backdrop="static">查找会员</a>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="space-2"></div>
        <form class="form-horizontal" id="form1" onkeydown="if(event.keyCode==13)return false;" action="/Consume/Create" method="post" data-ajax="true">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">

                    <div class="tabbable">
                        <ul class="nav nav-tabs" id="tabs">
                            <li class="active">
                                <a aria-expanded="true" href="#memberinfo" data-toggle="tab">
                                    <i class="green ace-icon fa fa-user bigger-120"></i> 资料
                                </a>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="memberinfo">
                                <div class="row">
                                    <div class="col-sm-2 col-xs-4 col-sm-push-10 center hidden-xs">
                                        <span class="profile-picture">
